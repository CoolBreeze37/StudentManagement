@model HomeDetialsViewsModel
@{
    // Layout ="_Layout";
    ViewBag.Title = "学生详情页";
    var photoPath = "~/images/" + (Model.student.PhotoPath??"timg.png");
}


    <div class=" row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.student.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img src="@photoPath" width="55%" height="300px" alt="Alternate Text" asp-append-version="true"/>  
                    <h4>学生ID：@Model.student.Id</h4>
                    <h4>邮箱：@Model.student.Email</h4>
                    <h4>班级名称：@Model.student.ClassName</h4>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class ="btn btn-primary">返回</a>
                    <a href="#" class ="btn btn-primary">编辑</a>
                    <a href="#" class ="btn btn-primary">删除</a>
                </div>
            </div>
        </div>
    </div>


@section Script{
    <script src="~/js/CustomeScript.js"></script>
}